// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  registrations Registration[]

  @@map("users")
}

enum Role {
  ADMIN
  USER
}

model ExerciseType {
  id        String   @id @default(uuid())
  name      String   @unique
  isActive  Boolean  @default(true)
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  events Event[]

  @@map("exercise_types")
}

// Tipo de recurrencia del evento
enum RecurrenceType {
  SINGLE   // Evento único (una sola fecha)
  WEEKLY   // Recurrencia por días de la semana
  INTERVAL // Recurrencia por intervalo de días
}

model Event {
  id              String         @id @default(uuid())
  name            String
  description     String
  startDate       DateTime       // Fecha de inicio del evento
  endDate         DateTime       // Fecha de fin (igual a startDate para eventos únicos)
  time            String         // Hora del evento (formato HH:MM)
  capacity        Int            // Capacidad por instancia
  recurrenceType  RecurrenceType @default(SINGLE)
  recurrencePattern Json?        // { weekdays: [1,3,5] } o { intervalDays: 2 }
  isActive        Boolean        @default(true)
  exerciseTypeId  String
  createdBy       String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  exerciseType   ExerciseType    @relation(fields: [exerciseTypeId], references: [id])
  instances      EventInstance[]
  registrations  Registration[]

  @@map("events")
}

// Instancia específica de un evento (una fecha/hora concreta)
model EventInstance {
  id        String   @id @default(uuid())
  eventId   String
  dateTime  DateTime // Fecha y hora específica de esta instancia
  capacity  Int      // Capacidad heredada del evento padre
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  event         Event          @relation(fields: [eventId], references: [id], onDelete: Cascade)
  registrations Registration[]

  @@map("event_instances")
}

// Inscripción del usuario al evento
model Registration {
  id              String   @id @default(uuid())
  userId          String
  eventId         String
  eventInstanceId String   // Instancia específica seleccionada
  qrCode          String   @unique @default(uuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user                User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  event               Event                @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventInstance       EventInstance        @relation(fields: [eventInstanceId], references: [id], onDelete: Cascade)
  attendance          Attendance?
  wellnessAssessments WellnessAssessment[]

  @@unique([userId, eventInstanceId]) // Un usuario solo puede registrarse una vez por instancia
  @@map("registrations")
}

// Evaluación de bienestar PRE o POST evento
model WellnessAssessment {
  id             String               @id @default(uuid())
  registrationId String
  type           WellnessType
  sleepQuality   Int?                 // 1-10, null si no completado
  stressLevel    Int?                 // 1-10, null si no completado
  mood           Int?                 // 1-10, null si no completado
  status         WellnessStatus       @default(PENDING)
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  registration Registration @relation(fields: [registrationId], references: [id], onDelete: Cascade)

  @@unique([registrationId, type])
  @@map("wellness_assessments")
}

enum WellnessType {
  PRE
  POST
}

enum WellnessStatus {
  PENDING
  COMPLETED
}

// Registro de asistencia al evento
model Attendance {
  id             String   @id @default(uuid())
  registrationId String   @unique
  attended       Boolean  @default(false)
  checkedAt      DateTime?
  checkedBy      String?  // ID del admin que marcó la asistencia
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  registration Registration @relation(fields: [registrationId], references: [id], onDelete: Cascade)

  @@map("attendances")
}
